<resources>
    <!-- Base application theme. -->
    <style name="Theme.TheMovieBookingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="textAllCaps">false</item>
        <!-- <item name="fontFamily">@font/dm_sans</item>-->
    </style>

    <!-- FullScreen Dialog Style -->
    <style name="FullScreenDialogTheme" parent="Theme.TheMovieBookingApp">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>