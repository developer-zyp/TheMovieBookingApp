<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_vh_cast"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_large"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/width_vh_cast"
        android:layout_height="@dimen/width_vh_cast"
        app:cardCornerRadius="36dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBannerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/place_holder_cast" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:text="Katty \nas Monica"
        android:textColor="@color/white" />

</LinearLayout>