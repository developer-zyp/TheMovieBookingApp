<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llShowTimeVH"
    android:layout_width="@dimen/width_vh_showtime"
    android:layout_height="@dimen/height_vh_showtime"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/bg_movie_showtime"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowTime"
        style="@style/styleShowTimeVHText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6:30 AM" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowType"
        style="@style/styleShowTimeVHText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="3D DBOX"
        android:textSize="@dimen/text_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowScreen"
        style="@style/styleShowTimeVHText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Screen 2"
        android:textSize="@dimen/text_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAvailableSeet"
        style="@style/styleShowTimeVHText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="21 Available"
        android:textSize="@dimen/text_small" />

</LinearLayout>