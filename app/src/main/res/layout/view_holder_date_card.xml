<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_card_medium">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDateCard"
        android:layout_width="@dimen/width_date_card"
        android:layout_height="@dimen/height_date_card"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_date_card" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDateCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:paddingTop="@dimen/margin_medium"
        android:text="Today\nMay\n8"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</RelativeLayout>